<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="EditTextBase">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AvisameDigitaltEditableDarkMedium" parent="EditTextBase">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/colorTextDark</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="AvisameDigitaltTextDarkLarge">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="AvisameDigitaltTextDarkMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="AvisameDigitaltTextDarkSmall">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="AvisameDigitaltTextLightMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="AvisameDigitaltTextLightSmall">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainButtonGreen">
        <item name="android:background">@drawable/button_main</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
